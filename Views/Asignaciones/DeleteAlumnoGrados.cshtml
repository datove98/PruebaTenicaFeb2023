@model PruebaTenicaFeb2023.Models.AlumnoGrado

<div class="container">
    <div class="row">
        <div class="col">
            @using (Html.BeginForm("DeleteAsignacion", "Asignaciones", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.Id)
                <div class="mb-3">
                    <label class="form-label">Alumno</label>
                    @Html.DisplayFor(m => m.Alumno.Nombre, new { @class ="form-label" })

                </div>
                <div class="mb-3">
                    <label class="form-label">Grado</label>
                    @Html.DisplayFor(m => m.Grado.Nombre, new { @class ="form-label" })
                </div>
                <div class="mb-3">
                    <label class="form-label">Seccion</label>
                    @Html.DisplayFor(m => m.Seccion, new { @id = "txtSeccion", @class = "form-label" })
                </div>
                <button type="submit" class="btn btn-primary" id="btnSubmit">Submit</button>
            }
        </div>
        <div id="confirmDialog" title="Eliminar Asignacion" hidden>
            <p>Desea borrar la Asignacion seleccionada?</p>
        </div>
    </div>
</div>

<script>
    $(document).ready(
        function (){
            $("#btnSubmit").click(function(e) {
                e.preventDefault();
                $("#confirmDialog").dialog("open");
            });

            $("#confirmDialog").dialog({
                autoOpen:false,
                modal: true,
                resizable: false,
                buttons: {
                    "OK": function (){
                        $('form').submit();
                    },
                    "Cancelar":function (e){
                        $(this).dialog("close");
                    }
                }
            });
        }    
    )
</script>