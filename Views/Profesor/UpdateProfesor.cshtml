@model PruebaTenicaFeb2023.Models.Profesor

<div class="container">
    <div class="row">
        <div class="col">
            @using (Html.BeginForm("UpdateProfesor", "Profesor"))
            {
                @Html.HiddenFor(m => m.Id)
                <div class="mb-3">
                    <label for="txtNombre" class="form-label">Nombre</label>
                    @Html.TextBoxFor(m => m.Nombre, new { @id = "txtNombre", @class = "form-control" })
                </div>
                <div class="mb-3">
                    <label for="txtNombre" class="form-label">Genero</label>
                    @Html.DropDownListFor(m => m.Genero, (IEnumerable<SelectListItem>)ViewBag.Generos, new { @id = "txtGenero", @class = "form-control" })

                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            }
        </div>
    </div>
</div>