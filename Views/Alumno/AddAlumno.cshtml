@model PruebaTenicaFeb2023.Models.Alumno
<div class="container">
    <div class="row">
        <div class="col">
            @using (Html.BeginForm(FormMethod.Post))
            {
                <div class="mb-3">
                    <label for="txtNombre" class="form-label">Nombre</label>
                    @Html.TextBoxFor(m => m.Nombre, new { @id = "txtNombre", @class = "form-control" })
                </div>
                <div class="mb-3">
                    <label for="txtNombre" class="form-label">Genero</label>
                    @Html.TextBoxFor(m => m.Genero, new { @id = "txtGenero", @class = "form-control" })

                </div>
                <div class="mb-3">
                    <label for="txtNombre" class="form-label">Fecha de Nacimiento</label>
                    @Html.TextBoxFor(m => m.FechaNac, "{0:MM/dd/yyyy}", new { @id = "txtFechaNac", @class = "form-control datepicker", @type = "date" })"
                    @*@Value = Convert.ToString(Model.FechaNac.ToShortDateString()) }*@
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            }
        </div>
    </div>
</div>

