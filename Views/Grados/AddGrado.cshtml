@model PruebaTenicaFeb2023.Models.Grado
<div class="container">
    <div class="row">
        <div class="col">
            @using (Html.BeginForm(FormMethod.Post))
            {
                @Html.HiddenFor(m => m.Id)
                <div class="mb-3">
                    <label for="txtNombre" class="form-label">Nombre</label>
                    @Html.TextBoxFor(m => m.Nombre, new { @id = "txtNombre", @class = "form-control" })
                </div>
                <div class="mb-3">
                    <label for="txtNombre" class="form-label">Profesor</label>
                    @Html.DropDownListFor(m => m.ProfesorId, (IEnumerable<SelectListItem>)ViewBag.Profesores, new { @id = "txtGenero", @class = "form-control" })
                    @*@Html.TextBoxFor(m => m.Genero, new { @id = "txtGenero", @class = "form-control" })*@
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            }
        </div>
    </div>
</div>